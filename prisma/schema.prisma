generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_STORAGE")
}


model localizacao {
  id            String              @id @default(cuid())
  nome          String
  descricao     String
  bairro        String?
  rua           String?
  latitude      Float
  longitude     Float
  tipoRacismo   tipoRacismo         @relation(fields: [tipoRacismoId], references: [id])
  tipoRacismoId String
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
  respostas     resposta[]
  ocorrencias   ocorrencias[]

  @@index([tipoRacismoId])
}


model tipoRacismo {
  id            String              @id @default(cuid())
  descricao     String
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
  localizacoes  localizacao[]
  ocorrencias   ocorrencias[]
  avaliacoes    avaliacao[]
}

model ocorrencias {
  id             String           @id @default(cuid())
  descricao      String
  data           DateTime         @default(now())
  status         String           @default("aberta")
  localizacaoId  String
  localizacao    localizacao      @relation(fields: [localizacaoId], references: [id])
  tipoRacismoId  String
  tipoRacismo    tipoRacismo      @relation(fields: [tipoRacismoId], references: [id])
  respostas      resposta[]
  avaliacoes     avaliacao[]
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  @@index([localizacaoId])
  @@index([tipoRacismoId])
}

model resposta {
  id            String              @id @default(cuid())
  comentario    String
  usuario       String
  localizacao   localizacao         @relation(fields: [localizacaoId], references: [id])
  localizacaoId String
  ocorrencia    ocorrencias         @relation(fields: [ocorrenciaId], references: [id])
  ocorrenciaId  String
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt

  @@index([localizacaoId])
  @@index([ocorrenciaId])
}

model avaliacao {
  id            String              @id @default(cuid())
  usuario       String
  comentario    String
  nota          Int                 @default(0)
  tipoRacismo   tipoRacismo         @relation(fields: [tipoRacismoId], references: [id])
  tipoRacismoId String
  ocorrencia    ocorrencias         @relation(fields: [ocorrenciaId], references: [id])
  ocorrenciaId  String
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt

  @@index([tipoRacismoId])
  @@index([ocorrenciaId])
}

